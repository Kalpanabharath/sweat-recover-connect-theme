<div class="isolate">
  <div class="image-wrap" style="background-image: url({{ section.settings.imageone | img_url }});">
    <div class="text-content {{ section.settings.content_position }}">
      <div class="text" style="color: {{ section.settings.color }};">
        <div class="uppercase">{{ section.settings.main_text }}</div>
        <div class="subtext">{{ section.settings.sub_text }}</div>
      </div>
    </div>
  </div>
</div>

<style>
  .w-full-image {
    width: 100%;
    height: auto;
  }

  .image-wrap {
    display: flex;
    position: relative; /* Positioning context for absolute children */
    width: 100%;
    height: 400px; /* Set a height for the background */
    background-size: cover; /* Cover the entire area */
    background-position: center; /* Center the background image */
  }

  .text-content {
    font-size: 2rem;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .left-center {
    align-items: flex-start;
    justify-content: center;
  }

  .center-center {
    align-items: center;
    justify-content: center;
  }

  .right-center {
    align-items: flex-end;
    justify-content: center;
  }

  .top-left {
    align-items: flex-start;
    justify-content: flex-start;
  }

  .top-center {
    align-items: center;
    justify-content: flex-start;
  }

  .bottom-center {
    align-items: center;
    justify-content: flex-end;
  }

  .uppercase {
    text-transform: uppercase;
    font-family: 'Cormorant', serif;
    font-size: 28px;
  }

  .subtext {
    font-size: 16px;
    text-align: center;
  }

  @media (max-width: 649px) {
    .image-wrap {
      flex-direction: column;
    }

    .uppercase {
      font-size: 20px;
    }

    .subtext {
      font-size: 15px;
    }
  }
</style>

{% schema %}
{
  "name": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "imageone",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        {
          "label": "Left Center",
          "value": "left-center"
        },
        {
          "label": "Center Center",
          "value": "center-center"
        },
        {
          "label": "Top Center",
          "value": "top-center"
        },
        {
          "label": "Right Center",
          "value": "right-center"
        },
        {
          "label": "Top Left",
          "value": "top-left"
        },
        {
          "label": "Bottom Center",
          "value": "bottom-center"
        }
      ],
      "default": "center-center"
    },
    {
      "type": "text",
      "id": "main_text",
      "label": "Main Text",
      "default": "Pure ZARI Kanchipuram"
    },
    {
      "type": "text",
      "id": "sub_text",
      "label": "Sub Text",
      "default": "Shop Now"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Text Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "herosection"
    }
  ]
}
{% endschema %}
