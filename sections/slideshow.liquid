<div
  class="background-content-section"
  style="background-image: url({{ section.settings.background_image | img_url: '1600x' }}); display: flex; flex-direction: column; justify-content: {{ section.settings.content_alignment }}; align-items: center; height: 500px; background-size: cover; text-align: center; padding: 20px;">
  <div class="rich-text-content" style="margin-bottom: 20px;">
    <p>{{ section.settings.rich_text_content }}</p>
  </div>
  <div class="button-container">
    <a href="{{ section.settings.button_link }}" class="button" style="padding: 10px 20px; background-color: #333; color: #fff; text-decoration: none; border-radius: 5px;">{{ section.settings.button_text }}</a>
  </div>
</div>

<style>
  .background-content-section {
    background-position: center;
  }
</style>
{% schema %}
  {
    "name": "Background Content Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "rich_text_content",
        "label": "Rich Text Content"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "select",
        "id": "content_alignment",
        "label": "Content Alignment",
        "default": "center",
        "options": [
          {
            "value": "flex-start",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "flex-end",
            "label": "Bottom"
          }
        ]
      }
    ]
  }
  {% endschema %}


  
  