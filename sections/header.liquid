{% schema %}
    {
      "name": "Custom Section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "My Custom Section"
        }
      ],
      "blocks": [
        {
          "type": "text",
          "name": "Text Block",
          "settings": [
            {
              "type": "text",
              "id": "content",
              "label": "Content"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Default"
        }
      ]
    }
    {% endschema %}
    
    <div class="custom-section">
      <h2>{{ section.settings.heading }}</h2>
      {% for block in section.blocks %}
        {% if block.type == 'text' %}
          <p>{{ block.settings.content }}</p>
        {% endif %}
      {% endfor %}
    </div>
    