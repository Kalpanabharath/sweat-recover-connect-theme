{% schema %}
    {
      "name": "Header",
      "settings": [
        {
          "type": "text",
          "id": "header_text",
          "label": "Header Title",
          "default": "Welcome to Our Store"
        }
      ]
    }
    {% endschema %}
    
    <header class="site-header">
      <div class="header-logo">
        <p><header></header></p>
      </div>
      <h1>{{ section.settings.header_text }}</h1>
    </header>
    