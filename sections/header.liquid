{% schema %}
  {
    "name": "header",
    "settings": [
      {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo Image"
          }
    ],
    "blocks": [
      
    ],
    "presets": [
      {
        "name": "header"
      }
    ]
  }
  {% endschema %}
  

<div class="navbar-container">
  <div class="navbar-alignment">
    <img src="https://cdn.shopify.com/s/files/1/0878/2997/1246/files/nav_buttion.png?v=1722101173" alt="Button Image" width="auto" height="auto" />
  </div>
  <div class="logo">
      <img src="{{ section.settings.logo | img_url}}" alt="Logo" width="auto" height="auto" />
  </div>
  <div class="header-content">
    <div class="login">
      <img src="https://cdn.shopify.com/s/files/1/0878/2997/1246/files/Icon.png?v=1722141714" alt="Button Image" width="auto" height="auto" />
      <p>LOG IN</p>
    </div>
    <div class="button">
      <button  class="button-book-classes">BOOK CLASSES</button>
      <button class="button-buy-classes">BUY CLASSES</button>
    </div>
  </div>
</div>

<style>
  .navbar-container {
    background-color: black;
    font-family: 'ABeeZee', sans-serif;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100vw;
    height: 10vh;
    padding: 0 3%;
  }

  .header-content {
    display: flex;
    gap: 1vw;
  }

  .login {
    display: flex;
    align-items: center;
    gap: 0.5vw;
  }

  .login p {
    font-family: 'ABeeZee', sans-serif;
    color: white;
    font-size: clamp(10px, 0.8vw, 20px);
  }

  .button {
    display: flex;
    gap: 0.5vw;
  }

  .button>* {
    font-size: clamp(10px, 0.6vw, 20px);
    padding: 10px 9px 10px 9px;
    white-space: nowrap;
    border:0.5px solid white;
    outline: none; 
    font-weight: 400;
  }
  .button-book-classes{
    background-color: transparent;
    color: white;
  }
  button-buy-classes{
    background-color: white;
    color: black;
  
  }
</style>