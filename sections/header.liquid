{% schema %}
    {
      "name": "header",
      "settings": [
     
        {
          "type": "text",
          "id": "header_title",
          "label": "Header Title",
          "default": "Welcome to Our Store"
        }
      ],
      "blocks": [
        {
          "type": "announcement",
          "name": "Announcement Bar",
          "settings": [
            {
              "type": "text",
              "id": "announcement_text",
              "label": "Announcement Text",
              "default": "Free shipping on orders over $50!"
            },
            {
              "type": "url",
              "id": "announcement_link",
              "label": "Announcement Link",
              "default": "/collections/all"
            }
          ]
        },
        {
          "type": "custom_header",
          "name": "Custom Header",
          "settings": [
            {
              "type": "text",
              "id": "custom_header_text",
              "label": "Custom Header Text",
              "default": "Shop the latest collections!"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "header",
          "category": "Header"
        }
      ]
    }
    {% endschema %}
    
    <header class="site-header">
      <div class="header-logo">
        <p>hedaer</p>
      </div>
      <h1>{{ section.settings.header_title }}</h1>
    
      {% for block in section.blocks %}
        {% case block.type %}
        {% when 'announcement' %}
          <div class="announcement-bar">
            <a href="{{ block.settings.announcement_link }}">
              {{ block.settings.announcement_text }}
            </a>
          </div>
        {% when 'custom_header' %}
          <div class="custom-header">
            <p>{{ block.settings.custom_header_text }}</p>
          </div>
        {% endcase %}
      {% endfor %}
    </header>
    