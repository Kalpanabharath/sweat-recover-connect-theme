<div class="slideshow-container">
  <div
    class="image-wrap"
    id="image-wrap">
    {% render 'responsive-picture'
      , desktopImage: section.settings.image
      , mobileImage: section.settings.mobile_image
      , img-class: 'w-full-image' %}
  </div>
  <div class="slideshow-text-container">
    <div class="container-text">
      <div class="text-content-container">
        <div class="text-content-align">
          <div class="hover-state-text-one">{{ section.settings.text_before }}</div>
          <div class="hover-state-richtext">{{ section.settings.richtext }}</div>
          <div class="hover-state-text-two">{{ section.settings.text_after }}</div>
          <button class="hover-state-button">{{ section.settings.button_text }}</button>
        </div>
      </div>
    </div>
    <div class="container-block">
     
     
    </div>
  </div>
</div>


{% style %}
  .w-full-image {
    width: 100%;
    height: auto;
   

  }
  .image-wrap {
    width: 100%;
    height: auto;
    /* Ensure height adjusts based on content */
    background-size: cover;
    /* Make sure the background image covers the entire element */
    background-position: center;
    /* Center the background image */
    background-repeat: no-repeat;
    /* Prevent the background image from repeating */
 }
  .slideshow-container {
    position: relative;
  }

  .slideshow-text-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    
    font-family: 'ABeeZee'
    , sans-serif;
  }

  .slideshow-text-container > * {
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* Ensures even distribution */
    padding: 0;
  }

  .container-text {
    display: flex;
    justify-content: flex-end;
    padding: 3%;
    text-transform: uppercase;
    color: white;
  }

  .hover-state-text-one {
    font-size: clamp(10px, 0.8vw, 15px);
    margin: 0;
  }

  .hover-state-text-two {
    font-size: clamp(10px, 0.9vw, 15px);
    text-transform: none;
    margin: 0;
  }

  .hover-state-richtext {
    font-size: clamp(20px, 4vw, 40px);
    margin: 0;
  }

  .hover-state-button {
    border: none;
    padding: 10px 20px;
    background-color: white;
    cursor: pointer;
    color: black;
    width: fit-content;
    text-transform: uppercase;
    align-self: start;
    /* Ensures the button doesn't stretch */
  }

  .text-content-container {
    width: 70%;
    height: 30%;
    min-width: 500px;
    max-height: 200px;
  }

  .text-content-align {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* Fills the entire box */
  }



  @media screen and (max-width: 768px) {
    .slideshow-text-container{
    flex-direction: column;
    align-items:space-between;
    
    }
    .slideshow-text-container > *{
      width: 100%;
      height: 50%;
    }
    .image-wrap{
      background-image: url('{{ section.settings.mobile_image | img_url: 'original' }}');
    }
    .container-text{
      
      justify-content: flex-start;
      padding: 7%;
    }
    .text-content-container{
      min-width: null;
      min-height: 160px;
    }
    


  }


{% endstyle %}


{% schema %}
  {
    "name": "wellness and recover",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
      },
      {
        "type": "text",
        "id": "text_before",
        "label": "Text Before",
        "default": "wellness & Spa"
      },
      {
        "type": "richtext",
        "id": "richtext",
        "label": "Rich Text",
        "default": "<br>Take wellness <br>& recovery to <br>a whole new level</p>"
      }, {
        "type": "text",
        "id": "text_after",
        "label": "Text After",
        "default": "Full-service premium amenities.Just bring you, and we do the rest!"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "book classes"
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Text Block",
        "settings": [
          {
            "type": "text",
            "id": "block_text_one",
            "label": "Block Text One",
            "default": "First Text"
          }, {
            "type": "text",
            "id": "block_text_two",
            "label": "Block Text Two",
            "default": "Second Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "wellness and recover"
      }
    ]
  }
{% endschema %}
