{% schema %}
    {
      "name": "Custom Footer",
      "settings": [
        {
          "type": "text",
          "id": "footer_text",
          "label": "Footer Text",
          "default": "Thank you for visiting our store!"
        }
      ]
    }
    {% endschema %}
    
    <footer class="custom-footer">
      <div class="container">
        <p>{{ section.settings.footer_text }}</p>
      </div>
    </footer>
    